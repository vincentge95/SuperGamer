{
  "name": "SuperGamer",
  "description": "SuperGamer extension.",
  "version": "2.0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": 
  { 
    "48": "icon48.png",            
    "128": "icon128.png" 
  },

  "content_scripts": [
    {
      "matches": ["http://bbs.sgamer.com/forum-*-*.html", "http://bbs.sgamer.com/forum.php?mod=forumdisplay*"],
      "js": [
        "js/jquery.js",
        "js/ModifyForum.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["http://bbs.sgamer.com/thread-*-*-*.html","http://bbs.sgamer.com/forum.php?mod=viewthread*"],
      "js": [
        "js/jquery.js",
        "js/ModifyThread.js"
      ],
      "run_at": "document_start"
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "icon19.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://bbs.sgamer.com/"
  ],
  "web_accessible_resources": [
    "js/ExtraEmotionVar.js",
    "js/ExtraEmotion.js",
    "js/bbcode.js"
  ],
  "manifest_version": 2
}
