{
  "name": "SuperGamer",
  "description": "SuperGamer extension.",
  "version": "2.2.0",
  "background": {
    "scripts": ["js/background.js"]
  },
  "icons": 
  { 
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["http://bbs.sgamer.com/forum-*-*.html", "http://bbs.sgamer.com/forum.php?mod=forumdisplay*"],
      "js": [
        "js/jquery.js",
        "js/ModifyForum.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["http://bbs.sgamer.com/thread-*-*-*.html","http://bbs.sgamer.com/forum.php?mod=viewthread*"],
      "js": [
        "js/jquery.js",
        "js/ModifyThread.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["http://www.huya.com/*"],
      "js": [
        "js/jquery.js",
        "js/huya.js"
      ],
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_popup": "html/popup.html",
    "default_icon": "icon/icon19.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://bbs.sgamer.com/*",
    "http://www.huya.com/*"
  ],
  "web_accessible_resources": [
    "js/ExtraEmotionVar.js",
    "js/ExtraEmotion.js",
    "js/bbcode.js"
  ],
  "manifest_version": 2
}
