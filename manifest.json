{
  "name": "SuperGamer",
  "description": "SuperGamer extension.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://bbs.sgamer.com/forum-*-*.html"],
      "js": [
        "js/jquery.js",
        "js/modifyForum.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["http://bbs.sgamer.com/thread-*-*-*.html"],
      "js": [
        "js/jquery.js",
        "js/modifyThread.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://bbs.sgamer.com/"
  ],
  "manifest_version": 2
}
