{
  "name": "SuperGamer",
  "description": "SuperGamer extension.",
  "version": "1.0.5",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": 
  { 
    "48": "icon48.png",            
    "128": "icon128.png" 
  },

  "content_scripts": [
    {
      "matches": ["http://bbs.sgamer.com/forum-*-*.html", "http://bbs.sgamer.com/forum.php?mod=forumdisplay*"],
      "js": [
        "js/jquery.js",
        "js/modifyForum.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["http://bbs.sgamer.com/thread-*-*-*.html","http://bbs.sgamer.com/forum.php?mod=viewthread*"],
      "js": [
        "js/jquery.js",
        "js/modifyThread.js"
      ],
      "run_at": "document_start"
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "icon19.png"
  },
  "permissions": [
    "tabs",
    "http://bbs.sgamer.com/"
  ],
  "manifest_version": 2
}
